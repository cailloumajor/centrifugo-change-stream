use("testdb");

db.disableFreeMonitoring();

const genTimestamp = () =>
    new Date(Date.now() - Math.floor(Math.random() * 60) * 1000);

function updateTestCollection() {
    db.testcoll.updateOne(
        {
            _id: "integration-tests"
        },
        {
            $currentDate: {
                updatedAt: true
            },
            $set: {
                "val.integer": Math.floor(Math.random() * 100 + 150),
                "val.float": Math.random() * 10 + 32,
                "ts.first": genTimestamp(),
                "ts.second": genTimestamp(),
            }
        },
        {
            upsert: true
        }
    );
}

while (true) {
    updateTestCollection();
    sleep(1000);
}
