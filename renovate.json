{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "semanticCommits": "enabled",
  "automergeType": "branch",
  "lockFileMaintenance": {
    "enabled": true,
    "automerge": true
  },
  "packageRules": [
    {
      "matchPackageNames": [
        "rust",
        "tonistiigi/xx"
      ],
      "matchManagers": [
        "dockerfile"
      ],
      "semanticCommitType": "fix"
    },
    {
      "matchDatasources": ["docker"],
      "matchPackageNames": ["denoland/deno"],
      "versioning": "regex:^(?<compatibility>[a-z]+)-(?<major>\\d+)\\.(?<minor>\\d+)\\.(?<patch>\\d+)$"
    },
    {
      "matchDepTypes": [
        "dev-dependencies"
      ],
      "automerge": true
    },
    {
      "matchDepTypes": [
        "dependencies"
      ],
      "matchUpdateTypes": [
        "patch"
      ],
      "automerge": true
    }
  ]
}
